<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/raking">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ranking:"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1º"
            android:id="@+id/textView4"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrimeiroLugarMemoria"
            android:textStyle="italic"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2º"
            android:id="@+id/textView6"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSegundoLugarMemoria"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textStyle="italic"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3º"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTerceiroLugarMemoria"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textStyle="italic"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4º"
            android:id="@+id/textView8"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuartoLugarMemoria"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5º"
            android:id="@+id/textView10"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuintoLugarMemoria"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:layout_width="172dp"
        android:layout_height="125dp"
        android:id="@+id/btnVoltarRanking"
        android:layout_gravity="right"
        android:background="@drawable/btnvoltar" />

</LinearLayout>